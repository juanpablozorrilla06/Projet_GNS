{
 "meta": {
   "project": "Network Automation",
   "ip_version": 6,
   "addressing_strategy": {
     "links_prefixlen": 64,
     "loopbacks_prefixlen": 128,
     "p2p_endpoint_rule": "endpoint0_is_1_endpoint1_is_2",
     "link_addressing": "human_defined_subnet_v6",
     "loopback_addressing": "automated_from_pool"
   }
 },


 "ases": {
   "111": {
     "igp": { "type": "ospfv3", "process_id": 1, "area": 0 },
     "ip_pools": { "loopbacks": "2001:2001:1:1::/64" },
     "routers": ["R1", "R2"]
   },
   "112": {
     "igp": { "type": "ripng", "process_name": "RIP-Y" },
     "ip_pools": { "loopbacks": "2001:2001:2:1::/64" },
     "routers": ["R3", "R4"]
   }
 },


 "routers": {
   "R1": { "as": "111", "role": "internal", "router_id": "1.1.1.1" },
   "R2": { "as": "111", "role": "edge",     "router_id": "2.2.2.2" },
   "R3": { "as": "112", "role": "edge",     "router_id": "3.3.3.3" },
   "R4": { "as": "112", "role": "internal", "router_id": "4.4.4.4" }
 },


 "links": [
   {
     "name": "L12",
     "type": "intra_as",
     "as": "111",
     "subnet_v6": "2001:2001:1:10::/64",
     "ospf_cost": 10,
     "endpoints": [
       { "router": "R1", "interface": "FastEthernet0/0" },
       { "router": "R2", "interface": "FastEthernet0/0" }
     ]
   },
   {
     "name": "L23",
     "type": "inter_as",
     "subnet_v6": "2001:2001:3:10::/64",
     "relationship": "peer",
     "endpoints": [
       { "router": "R2", "interface": "GigabitEthernet1/0" },
       { "router": "R3", "interface": "GigabitEthernet1/0" }
     ]
   },
   {
     "name": "L34",
     "type": "intra_as",
     "as": "112",
     "subnet_v6": "2001:2001:2:10::/64",
     "endpoints": [
       { "router": "R3", "interface": "FastEthernet0/0" },
       { "router": "R4", "interface": "FastEthernet0/0" }
     ]
   }
 ],


 "bgp": {
   "required": true,
   "ibgp": {
     "mode": "full_mesh",
     "use_loopbacks": true,
     "send_community": true,
     "edge_next_hop_self_towards_ibgp": true
   },
   "originate": {
     "loopbacks": true
   }
 },


 "policies": {
   "communities": {
     "customer": "111:100",
     "provider": "111:300"
   },
   "local_pref": {
     "customer": 200,
     "provider": 50
   },
   "export_rules": {
     "to_peer_or_provider": ["self", "customer"],
     "to_customer": ["self", "customer", "peer", "provider"]
   }
 }
}

